<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/common_s_spacing"
    android:paddingTop="@dimen/common_s_spacing">

    <TextView
        android:id="@+id/ranking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="@dimen/s_text_size" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="0dp"
        android:layout_height="@dimen/common_m_spacing"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:text="球队"
        android:textColor="@color/black"
        android:textSize="@dimen/s_text_size" />

    <TextView
        android:id="@+id/count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="场次"
        android:textColor="@color/black"
        android:textSize="@dimen/s_text_size" />

    <TextView
        android:id="@+id/win"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="胜"
        android:textColor="@color/black"
        android:textSize="@dimen/s_text_size" />

    <TextView
        android:id="@+id/tie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="平"
        android:textColor="@color/black"
        android:textSize="@dimen/s_text_size" />

    <TextView
        android:id="@+id/lose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="输"
        android:textColor="@color/black"
        android:textSize="@dimen/s_text_size" />

    <TextView
        android:id="@+id/net"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="净胜"
        android:textColor="@color/black"
        android:textSize="@dimen/s_text_size" />

    <TextView
        android:id="@+id/score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:gravity="center"
        android:text="积分"
        android:textColor="@color/black"
        android:textSize="@dimen/s_text_size" />
</LinearLayout>