<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridView
            android:layout_weight="1"
            android:id="@+id/nba_team_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="5" />

        <TextView
            android:id="@+id/text_ensure"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:paddingBottom="@dimen/common_xs_spacing"
            android:paddingEnd="@dimen/common_xl_spacing"
            android:paddingStart="@dimen/common_xl_spacing"
            android:paddingTop="@dimen/common_xs_spacing"
            android:text="@string/tips_text" />

    </LinearLayout>

</FrameLayout>